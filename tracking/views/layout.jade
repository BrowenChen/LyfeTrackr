!!!
html(ng-app="myApp", ng-controller='AppCtrl')
	head
		meta(charset='utf8')
		base(href='/')
		title Tracking
		link(rel='stylesheet', href='/css/app.css')
		link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
		script(type='text/javascript', src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
		script(type='text/javascript', src='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
		script(type='text/javascript', src='//d3js.org/d3.v3.min.js')
		script(type='text/javascript', src='//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.min.js')
		link(rel='stylesheet', href='//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.css')

			
	body

		block body		
		br 
		br

		
		.row
			.col-sm-6.col-sm-offset-2
				#calendar.jumbotron(style="opacity: .85;")
					.row
						h2(style="text-align:center") Tracking Progress
						hr	
					.row
						.col-sm-8.col-sm-offset-1
							#cal-heatmap
		
			.col-sm-3
				#control.jumbotron(style="opacity: .85;")
					h2(style="text-align:center;") Control
					hr
					.row
						.col-sm-4
							.form
								button.btn.btn-primary(style="border-radius:10px;", ng-click="dateConvert()") Input Date
								input(type="text", ng-model="inputDate", placeholder=" ex. 2014.8.01", name="date", style="border-radius:10px;")
								br
								br
								button.btn.btn-primary(style="border-radius:10px;") Value
								input(type="text", placeholder=" Value from 1 - 100", name="value", style="border-radius:10px;")



		script(src='/js/trackingCtrl.js')
		script(src='/js/lib/angular/angular.js')
		script(src='/js/app.js')
		script(src='/js/slider.js')    
		script(src='/js/services.js')
		script(src='/js/controllers.js')
		script(src='/js/filters.js')
		script(src='/js/directives.js')			
